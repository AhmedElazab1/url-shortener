<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener App</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <h1>URL Shortener</h1>

    <div class="form-container">
      <form id="urlForm" method="POST" action="/shorten">
        <label for="urlInput">Enter URL:</label>
        <input
          type="text"
          id="urlInput"
          name="urlInput"
          required
          placeholder="http://this.is.way/too/long?isnt=it"
        />
        <label for="aliasInput">Enter alias:</label>
        <input
          type="text"
          id="aliasInput"
          name="aliasInput"
          placeholder="http://localhost:3000/......"
        />
        <input type="submit" value="Shorten URL" />
      </form>
    </div>

    <div class="table-container">
      <table id="urlTable">
        <tr>
          <th>Original URL</th>
          <th>Shortened URL</th>
        </tr>
        <% urls.forEach((url) => { %>
          <tr>
            <td>
              <a href="<%= url.originalUrl %>"><%= url.originalUrl %></a>
            </td>
            <td>
              <a href="http://localhost:3000/<%= url.alias %>">
                http://localhost:3000/<%= url.alias %>
              </a>
            </td>
          </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
